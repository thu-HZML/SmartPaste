{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SmartPaste",
  "version": "1.0.0",
  "identifier": "com.tauri-app.smartpaste",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "SmartPaste",
        "alwaysOnTop": true,
        "transparent": true,
        "decorations": false,
        "skipTaskbar": true,
        "acceptFirstMouse": true,  
        "shadow": false,
        "resizable": false,
        "focus": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://asset.localhost asset: http://ipc.localhost http://101.42.152.3 ws://localhost:* wss://localhost:*; img-src 'self' http://asset.localhost asset: blob: data: http://101.42.152.3 https://101.42.152.3; script-src 'self' 'unsafe-eval' 'unsafe-inline';",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/*", "$LOCALDATA/*", "**/*.jpg", "**/*.png", "**/*.jpeg", "**/*.gif", "**/*.webp", 
          "**/*.moc3",
          "**/*.model3.json",
          "**/*.model.json",
          "**/*.exp3.json",
          "**/*.motion3.json",
          "**/*.flac",
          "**/*.mp3",
          "**/*.wav",
          "**/*.cdi3.json"]
      }
    }   
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "icon": [
      "icons/logo.png",
      "icons/tray.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/**/*"
    ]
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "window": {
      "label": "main",
      "defaultIcon": {
        "icon": "icons/logo.png"
      }
    },
    "notification": null
  }
}